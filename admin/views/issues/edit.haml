%ul.nav.nav-tabs
  %li=link_to tag_icon(:list, pat(:list)), url(:issues, :index)
  %li=link_to tag_icon(:plus, pat(:new)), url(:issues, :new)
  %li.active=link_to tag_icon(:edit, pat(:edit)), url(:issues, :edit, :id => @issue.id)

.tabs-content
  = form_for :issue, url(:issues, :update, :id => @issue.id), :method => :put, :class => 'form-horizontal' do |f|
    =partial 'issues/form', :locals => { :f => f }
